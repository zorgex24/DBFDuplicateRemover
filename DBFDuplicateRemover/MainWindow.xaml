<Window x:Class="DBFDuplicateRemover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Удаление дубликатов из DBF" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox Name="txtFilePath" IsReadOnly="True" Margin="10" Height="30"/>

        <Button Grid.Row="1" Content="Выбрать файл" Width="150" Height="30" Margin="10"
                HorizontalAlignment="Left" Click="BtnSelectFile_Click"/>

        <Button Grid.Row="2" Content="Запуск обработки" Width="150" Height="30" Margin="10"
                HorizontalAlignment="Left" Click="BtnProcess_Click"/>
    </Grid>
</Window>
